<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rstar.mobile.csc205sp2015"
    android:versionCode="1"
    android:versionName="v1.0.0"
    >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/logo_csc205"
        android:name=".app.App"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name=".app.InitActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".course.ModuleListActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".module.ModuleActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".textscreen.TextActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".search.SearchActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".info.HelpActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".video.VideoActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".download.DownloadActivity"
            android:label="@string/app_name"
            >
        </activity>

        <activity
            android:name=".registered.login.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".registered.login.UnlockActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".registered.homework.HomeworkActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".tools.ToolsActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".developer.DeveloperActivity"
            android:label="@string/app_name"
            >
        </activity>
    </application>

</manifest>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="@color/skyblue_light"
                android:endColor="@color/skyblue_very_dark"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/skyblue_very_dark" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>
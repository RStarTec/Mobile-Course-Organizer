<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityDrawers_layout"
    tools:context="com.rstar.mobile.csc205sp2015.module.ModuleActivity"
    tools:ignore="MergeRootFrame" >


    <FrameLayout
        android:id="@+id/activityModule_pageFragment_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- The navigation drawer -->
    <FrameLayout
        android:id="@+id/activityDrawer_leftFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background_dark">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/activityDrawer_rightFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/background_dark"
        />

</android.support.v4.widget.DrawerLayout>

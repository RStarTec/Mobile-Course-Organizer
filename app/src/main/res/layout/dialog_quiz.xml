<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogQuiz_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="left"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_light"
            android:text="@string/quiz_label"
        />

        <TextView
            android:id="@+id/dialogQuiz_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="left"
            android:textSize="@dimen/textsize_normal"
            android:singleLine="false"
            android:textColor="@color/text_dark"
            />
        <EditText
            android:id="@+id/dialogQuiz_studentAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="2dp"
            android:singleLine="false"
            android:minLines="4"
            android:maxLines="6"
            android:maxLength="400"
            android:inputType="text"
            android:background="@color/background_white"
            android:hint="@string/quiz_answer"
            />

        <Button
            android:id="@+id/dialogQuiz_checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="@string/button_quiz_answer"
            />
        <TextView
            android:id="@+id/dialogQuiz_modelAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_gravity="left"
            android:textSize="@dimen/textsize_normal"
            android:singleLine="false"
            android:textColor="@color/text_dark"
            />

    </LinearLayout>
</ScrollView>

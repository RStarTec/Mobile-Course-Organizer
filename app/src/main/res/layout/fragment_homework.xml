<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout 
        android:id="@+id/fragmentHomework_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentHomework_question_id"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/text_dark"
        />
        <TextView
            android:id="@+id/fragmentHomework_points_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textStyle="italic"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            />

        <TextView
            android:id="@+id/fragmentHomework_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            />
        <ImageView
            android:id="@+id/fragmentHomework_bitmap_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            android:text="@string/homework_answer"
            />
    
        <EditText
            android:id="@+id/fragmentHomework_answer_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:minLines="4"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:maxLength="2000"
            android:background="@color/background_white"
            android:textColor="@color/text_dark"
            />
        <Button
            android:id="@+id/fragmentHomework_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            />
    
    </LinearLayout>
    
                
</ScrollView>

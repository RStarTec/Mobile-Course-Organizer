<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/activityInit_title_binary"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:singleLine="false"
        android:textSize="@dimen/textsize_huge"
        android:textColor="@color/text_title"
        android:scrollHorizontally="false"
        android:ellipsize="none"
        android:padding="0dp"
        android:layout_margin="0dp"
        />

    <ImageView
        android:id="@+id/activityInit_diagram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/frontcover_pipelining"
        />

    <TextView
        android:id="@+id/activityInit_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:singleLine="false"
        android:textSize="@dimen/textsize_title"
        android:textAllCaps="true"
        android:textColor="@color/text_light"
        android:scrollHorizontally="false"
        android:ellipsize="none"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        />

</FrameLayout>

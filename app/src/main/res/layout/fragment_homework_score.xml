<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout 
        android:id="@+id/fragmentHomeworkScore_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_margin="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@color/background_light"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            android:text="@string/homework_score_label"
            />

        <TextView
            android:id="@+id/fragmentHomeworkScore_total_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_margin="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_margin="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@color/background_light"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            android:text="@string/homework_feedback_label"
            />
        <TextView
            android:id="@+id/fragmentHomeworkScore_feedback_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_margin="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_margin="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@color/background_light"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            android:text="@string/homework_submitted_label"
            />
        <TextView
            android:id="@+id/fragmentHomeworkScore_submitted_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_margin="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="@dimen/textsize_normal"
            android:textColor="@color/text_dark"
            />


    </LinearLayout>
    
                
</ScrollView>
